<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
        android:id="@+id/tab_bar_container"
        android:layout_width="fill_parent"
        android:layout_height="80.0dp"
        android:orientation="horizontal"
        android:gravity="center"
         >
        <LinearLayout 
            android:id="@+id/tab_setting"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:background="@drawable/sl_tab"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    >
		    <ImageView 
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:scaleType="center"
		        android:background="@color/transparent"
		        android:src="@drawable/sl_tab_setting"
		        />
		    <ImageView
			    android:id="@+id/tab_setting_bar"
			    android:layout_width="fill_parent"
			    android:layout_height="5.0px"
			    android:background="#7088C0"
			    />
		</LinearLayout>
		<ImageView
	        android:layout_width="1.0px"
	        android:layout_height="fill_parent"
	        android:src="@drawable/tab_separate"
	        />
		<LinearLayout 
		    android:id="@+id/tab_main"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:background="@drawable/sl_tab"
		    android:layout_weight="3"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    >
		    <ImageView 
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:background="@color/transparent"
		        android:src="@drawable/app_logo"
		        />
		    <ImageView
			    android:id="@+id/tab_main_bar"
			    android:layout_width="fill_parent"
			    android:layout_height="5.0px"
			    android:background="#7088C0"
			    />
		</LinearLayout>
		<ImageView
	       android:layout_width="1.0px"
	       android:layout_height="fill_parent"
	       android:src="@drawable/tab_separate"
	       />
		<LinearLayout 
		    android:id="@+id/tab_taglist"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:background="@drawable/sl_tab"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    >
		    <ImageView 
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:scaleType="center"
		        android:background="@color/transparent"
		        android:src="@drawable/sl_tab_list"
		        />
		    <ImageView
			    android:id="@+id/tab_taglist_bar"
			    android:layout_width="fill_parent"
			    android:layout_height="5.0px"
			    android:background="#7088C0"
			    />
		</LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
		android:id="@+id/viewpager"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		/>
</LinearLayout>
