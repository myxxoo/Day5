<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_imageview"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/imageview_local_item"
	    android:layout_width="150.0dp"
	    android:layout_height="150.0dp"
	    android:adjustViewBounds="false"
	    android:scaleType="center"
	    />
    <RelativeLayout 
        android:id="@+id/imageview_local_edit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        >
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/delete_image_overlay"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/delete_image_selected"
            />
    </RelativeLayout>
</RelativeLayout>
